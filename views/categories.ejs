<% include components/header.ejs %>
<div class="main">
    <div class="wrap">
        <div class="input-container">
            <div class="ui fluid icon input">
                <input type="text" name="search" placeholder="骚年，来一发呗...">
                <i class="search icon"></i>
            </div>
        </div>
        <div class="ui accordion">
            <% categories.forEach(function(category){ %>
                <div class="title">
                    <i class="iconfont icon-<%= category.icon %> cy-icon-list"></i>
                    <%= category.name %>
                </div>
                <% if(category.childsObject.length > 0) {%>
                <div class="content">
                    <div class="ui selection list">
                        <% category.childsObject.forEach(function(child) {%>
                        <div class="item">
                            <i class="iconfont icon-<%= child.icon %>" cy-icon-list></i>
                            <div class="content">
                                <div class="header"><%= child.name %></div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>
            <% }) %>
        </div>
    </div>
</div>

<% include components/footer.ejs %>